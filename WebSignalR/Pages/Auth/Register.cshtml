@page "/register"
@model WebSignalR.Pages.Auth.RegisterModel
@{
}

<div class="min-vh-100 d-flex align-items-center">
    <div class="container w-25">
        <div class="row">
            <div class="row text-center mx-auto">
                <h3>Register Account</h3>
            </div>

            <div class="content">
                <form method="post" class="d-grid gap-3">
                    <div class="col-12">
                        <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="email" name="Email" required>
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label">UserName <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="UserName" name="UserName" required>
                    </div>
                    <div class="col-12">
                        <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="password" name="Password" required>
                    </div>
                    <div class="d-flex ">
                        <div>
                            <input class="form-check-input" type="radio" name="Role" value="USER" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Default radio
                            </label>
                        </div>
                        <div class="margin-left-1">
                            <input class="form-check-input" type="radio" name="Role" value="ADMIN" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Default radio
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn bsb-btn-xl btn-primary w-100" type="submit">Register now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

