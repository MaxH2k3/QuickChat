	let listGroups = @Html.Raw(JsonSerializer.Serialize(Model.ListGroups, new JsonSerializerOptions() { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));

	document.addEventListener("DOMContentLoaded", function () {
		document.querySelector("#action_menu_btn").addEventListener("click", () => {
			var btnMenu = document.querySelector(".action_menu");
			if (btnMenu.style.display) {
				btnMenu.style.display = null;
			} else {
				btnMenu.style.display = "block";
			}
		});
	});

</script>