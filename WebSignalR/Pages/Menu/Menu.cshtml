@page "/menu"
@model WebSignalR.Pages.Menu.MenuModel
@using System.Text.Json;

@{
	ViewData["Style"] = "~/css/menu.css";
}

<input type="hidden" id="user-id" value="@(HttpContext.User.Claims.ElementAt(0).Value)" />
<div class="container-fluid h-100">	
	<div class="row justify-content-center h-100">
		@{
            await Html.RenderPartialAsync("../Component/DisplayGroup");
            await Html.RenderPartialAsync("../Component/DisplayMessage");
            await Html.RenderPartialAsync("../Component/DisplayNewGroup");
        }
		
	</div>
</div>

